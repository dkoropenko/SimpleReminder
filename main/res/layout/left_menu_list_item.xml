<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/list_item_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:textSize="@dimen/left_menu_text_size"
        android:textColor="@color/left_menu_text"
        android:text="First text"/>

    <TextView
        android:id="@+id/list_item_count"
        android:layout_width="@dimen/left_menu_count_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@color/left_menu_count_background"
        android:textSize="@dimen/left_menu_text_size"
        android:textColor="@color/left_menu_count_text"
        android:gravity="center"
        android:text="3"
        />

</RelativeLayout>