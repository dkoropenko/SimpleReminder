<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item_conteiner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/label_usual_count"
            android:text="Название метки"
            android:textColor="#262626"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/label_usual_count"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/label_important_count"
            android:background="@color/status_usual"
            android:text="5"
            android:textSize="12dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/label_important_count"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/label_complete_count"
            android:background="@color/status_important"
            android:text="3"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/label_complete_count"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:background="@color/status_complete"
            android:text="10"
            android:textSize="12dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>


